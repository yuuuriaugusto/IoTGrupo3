#include <ArduinoOTA.h>
#include <WiFi.h>

const char* ssid = "SuaRedeWiFi"; //Coloque sua rede WIFI
const char* password = "SuaSenhaWiFi";//Aqui vai a senha da rede

void setup() {
  Serial.begin(115200);
  Serial.println("Iniciando...");

  //Conectar-se à rede WiFi
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.println("Conectando ao WiFi...");
  }
  Serial.println("Conectado ao WiFi");

  //Inicializar OTA
  ArduinoOTA.begin();
  ArduinoOTA.setHostname("ESP32-C6"); //Pode alterar o nome para o nome desejado

  Serial.println("OTA pronta");
}

void loop() {
  ArduinoOTA.handle(); //Lidar com atualizações OTA

  //Nosso código principal pode ir aqui eu imagino pelo q eu pesquisei
}
